---
import { NavLink } from "./types";
const childrens: NavLink[] = [
    {
        title: "Home",
        url: "/"
    },
    {
        title: "Dev Log",
        url: "/blog"
    },
    {
        title: "Projects",
        url: "/projects"
    },
    {
        title: "About",
        url: "/about"
    }
]
---

<div class="nav">
    <div class="nav-line-bar"></div>
    <nav>
        <ul>
            {childrens.map( t =>
            <li class="link-card">
                <a href={t.url}>
                    <p class="nav-title">
                        {t.title}
                    </p>
                </a>
            </li>
            )}
        </ul>

        <div>
            Theme
        </div>
    </nav>

</div>


<style>
    .nav {
        display: block;
    }

    .nav-line-bar {
        background-color: ;
    }

    .nav-title {
        font-weight: 600;
    }

    .link-card:hover {
        box-shadow: 0 0 0 2px rgb(97, 97, 205), 0 0 0 4px rgb(235, 58, 182), 0 0 0 6px rgb(235, 200, 88);
    }

    .link-card>a {
        width: 100%;
        height: 100%;
        text-align: center;
        text-decoration: none;
        color: white;
    }

    a:hover {
        cursor: pointer;
    }

    .nav-line-bar {
        width: 100%;
        height: 0.3em;
        background: linear-gradient(-45deg, rgb(97, 97, 205), rgb(235, 58, 182), rgb(235, 200, 88), #15ff00);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    nav {
        width: 90;
        display: flex;
        margin-left: auto;
        margin-right: auto;
        max-width: 68rem;
        justify-content: space-between;
        align-items: center;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    ul {
        font-size: 1rem;
        line-height: 0.75rem;
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    li {
        display: list-item;
        text-align: -webkit-match-parent;
        padding-right: 0.45em;
        padding-left: 0.45em;
    }
</style>